{
	"useTabs": true,
	"printWidth": 120,
	"semi": false,
	"trailingComma": "all",
	"plugins": ["prettier-plugin-svelte"],
	"arrowParens": "avoid",
	"overrides": [
		{
			"files": "**/*.ts",
			"options": { "parser": "typescript" }
		},
		{
			"files": "**/*.svelte",
			"options": { "parser": "svelte" }
		}
	]
}
